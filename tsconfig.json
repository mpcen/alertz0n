{
    "compilerOptions": {
        "target": "ES2022", // Or your desired target
        "module": "ESNext", // Or "ESNext" if you want to use it
        "rootDir": ".", // Root directory of the project
        "outDir": "./dist", // Output directory for transpiled JavaScript
        "strict": true, // Enable strict type checking
        "esModuleInterop": true, // For better compatibility with CommonJS modules
        "skipLibCheck": true, // Skip type checking of declaration files
        "sourceMap": true, // Important for debugging
        "moduleResolution": "node" // For better compatibility with Node.js
    },
    "include": [
        "./src/**/*" // Include all TypeScript files in the src directory
    ],
    "exclude": ["node_modules"]
}
